<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:id="@+id/bs_otp_root_layout"
    android:background="@drawable/custom_layout_bg"
    android:elevation="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="______________"
            android:textColor="@color/gray"
            android:textAlignment="center"
            android:layout_marginBottom="5dp"
            android:textStyle="bold"
            android:layout_marginTop="-10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verify OTP"
            android:textColor="@color/theme_1"
            android:textSize="30sp"
            android:textStyle="bold" />

        <androidx.cardview.widget.CardView
            android:layout_width="140dp"
            android:layout_height="210dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardElevation="8dp"
            android:focusable="true"
            android:layout_marginTop="20dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/iv_slot_template_std"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    tools:targetApi="m" />

                <TextView
                    android:id="@+id/tv_sub_name_std"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="Sub"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:layout_marginTop="27dp"
                    android:layout_marginRight="7dp" />

                <TextView
                    android:id="@+id/tv_slot_time_std"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="67dp"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:id="@+id/tv_sub_teacher_std"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="***"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="25dp"
                    android:gravity="center"
                    android:layout_marginRight="13dp" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="Sub Code"
                    android:textColor="@color/white"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="30dp"
                    android:gravity="center"
                    android:layout_marginLeft="15dp" />

                <TextView
                    android:id="@+id/tv_sub_code_std"
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:text="1234567"
                    android:textColor="@color/black"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="12dp"
                    android:gravity="center"
                    android:layout_marginLeft="15dp" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>


        <EditText
            android:id="@+id/et_otp"
            style="@style/MyEditText"
            android:drawableStart="@drawable/password_et_icon"
            android:inputType="number"
            android:hint="OTP"
            android:layout_marginTop="30dp"
            />

        <Button
            android:id="@+id/btn_verify_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VERIFY"
            android:layout_marginTop="30dp"
            android:paddingHorizontal="50dp"
            android:background="@drawable/custom_btn"
            android:elevation="5dp"
            android:textStyle="bold"
            android:layout_marginBottom="180dp"
            />
    </LinearLayout>

</RelativeLayout>