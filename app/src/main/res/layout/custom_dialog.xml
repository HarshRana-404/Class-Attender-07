<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="360dp"
    android:background="@drawable/bg"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="Confirm ?"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <androidx.cardview.widget.CardView
        android:layout_width="140dp"
        android:layout_height="210dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardElevation="8dp"
        android:focusable="true"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_slot_template_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:foreground="?android:attr/selectableItemBackground"
                android:clickable="true"
                tools:targetApi="m" />

            <TextView
                android:id="@+id/tv_sub_name_dialog"
                android:layout_width="75dp"
                android:layout_height="wrap_content"
                android:text="Sub"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:layout_marginTop="27dp"
                android:layout_marginRight="7dp" />

            <TextView
                android:id="@+id/tv_slot_time_dialog"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="67dp"
                android:layout_marginLeft="10dp" />

            <TextView
                android:id="@+id/tv_sub_teacher_dialog"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="***"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="25dp"
                android:gravity="center"
                android:layout_marginRight="13dp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="Sub Code"
                android:textColor="@color/white"
                android:textSize="9sp"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:layout_marginLeft="15dp" />

            <TextView
                android:id="@+id/tv_sub_code_dialog"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:text="1234567"
                android:textColor="@color/black"
                android:textSize="11sp"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="12dp"
                android:gravity="center"
                android:layout_marginLeft="15dp" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_marginTop="20dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/cancel_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:textSize="12sp"
            android:textColor="@color/theme_1"
            android:background="@drawable/stroke_btn" />

        <Button
            android:id="@+id/generate_otp_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:text="Generate OTP"
            android:textSize="12sp"
            android:background="@drawable/custom_btn"/>

    </LinearLayout>

</LinearLayout>