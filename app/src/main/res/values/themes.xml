<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ClassAttender" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_1</item>
        <item name="colorPrimaryVariant">@color/theme_1</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/theme_1</item>
        <item name="colorSecondaryVariant">@color/theme_1</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <!-- Thematic Edit Text-->
    <style name="MyEditText" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:elevation">10dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/theme_1</item>
        <item name="android:background">@drawable/custom_edittext</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">5dp</item>
    </style>

    <!-- Days LinearLayout -->
    <style name="DaysLinearLayout" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <!-- Days ImageView for arrow -->
    <style name="DaysImageView" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_black_right_arrow</item>
    </style>

    <!-- Days TextView-->
    <style name="DaysTextView" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- My RecyclerView-->
    <style name="MyRecyclerView" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">3dp</item>
    </style>

    <!-- TimePickerDialog Theme -->
    <style name="MyTimePickerDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">@color/theme_1</item>
        <item name="colorPrimaryDark">@color/theme_1</item>
        <item name="colorAccent">@color/theme_1</item>
        <item name="colorOnPrimary">@color/theme_1</item>
    </style>

    <!-- BottomSheetDialog Theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>
    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>
    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/custom_layout_bg</item>
    </style>

    <!-- ProgressDialog Theme -->
    <style name="CustomProgressDialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorAccent">@color/theme_1</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@drawable/custom_progress_dialog</item>
    </style>
</resources>