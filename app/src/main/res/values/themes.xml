<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ClassAttender" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_1</item>
        <item name="colorPrimaryVariant">@color/theme_1</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/theme_1</item>
        <item name="colorSecondaryVariant">@color/theme_1</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
<!--    Thematic Edit Text-->
    <style name="MyEditText" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">10dp</item>
        <item name="android:elevation">10dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/theme_1</item>
        <item name="android:background">@drawable/custom_edittext</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">12</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">5dp</item>
    </style>
</resources>